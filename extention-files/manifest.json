{
  "manifest_version": 3,
  "name": "Shared Account",
  "version": "1.0",
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Shared Account"
  },
  "permissions": [
    "cookies",
    "storage",
    "tabs",
    "scripting",
    "activeTab",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "*://localhost/*",
    "https://www.copart.com/*",
    "*://*.copart.com/*"
  ],
  "host_permissions": [
    "*://*.copart.com/*",
    "*://localhost/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.copart.com/*"
      ],
      "js": [
        "contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "omnibox": {
    "keyword": "admin"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "admin.html",
        "dashboard.html",
        "assets/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}